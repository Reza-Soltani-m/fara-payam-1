{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "components": ["src/components"],
            "components/*": ["src/components/*"],

            "@/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "composite": true,

    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": ["node_modules", "build"]
}
